{
  "manifest_version": 3,
  "name": "ژورنال معاملاتی هوشمند",
  "version": "1.0",
  "description": "سیستم ثبت و تحلیل معاملات بورس با هوش مصنوعی",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://api.deepseek.com/*", "https://your-api-url.com/*"]
}
